@model Assignment12._2._2.Models.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@* step 9 - build boook details page *@


<section id="" class="p-5 bg-secondary text-light">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-md">
                    @if(Model.ImageName!=" ")
                    {
                        <img src="~/images/@Model.ImageName" alt="@Model.ImageName" class="image-fluid w-75" />
                    }
                    
                </div>
                <div class="col-md p-5">
                    <h2>@Html.DisplayFor(model=>model.Name)</h2>
                    <h4>@Html.DisplayFor(model=>model.Author)</h4>
                    <p class="lead">
                        Book Number @Html.DisplayFor(model=>model.Id)
                    </p>
                    <p>
                        @Html.DisplayFor(model=>model.Description)
                    </p>
                    <a href="#" class="btn btn-success mt-3"><i class="bi bi-bag-check"></i> Add To Cart</a>
                </div>
            </div>
        </div>
    </section>

