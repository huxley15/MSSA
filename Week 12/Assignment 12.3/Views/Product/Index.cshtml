@model Assignment12._1.Models.IndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @* displays heading for column id *@
                @Html.DisplayNameFor(model=>model.Products[0].Id)
            </th>
            <th>
                @* displays heading for column name *@
                @Html.DisplayNameFor(model=>model.Products[0].Name)
            </th>
            <th>
                @* displays heading for column name *@
                @Html.DisplayNameFor(model=>model.Products[0].Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@Html.DisplayFor(modelitem=>item.Id)</td>
                <td>@Html.DisplayFor(modelitem=>item.Name)</td>
                <td>
                    @Html.DisplayFor(modelitem=>item.Price)
                    
                </td>
                <td>
                    <a asp-action="Details"asp-route-id="@item.Id">Details</a>
                </td>
                <td>
                    <a asp-action="Update"asp-route-id="@item.Id">Update</a>
                </td>
                <td>
                    <a asp-action="Delete"asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create Product</a>
